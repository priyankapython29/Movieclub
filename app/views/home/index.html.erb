<!-- home -->
<section class="home">
	<!-- home bg -->
	<div class="owl-carousel home__bg">
		<div class="item home__cover" data-bg=<%= asset_path "img/home/home__bg.jpg" %> ></div>
		<div class="item home__cover" data-bg=<%= asset_path "img/home/home__bg2.jpg" %> ></div>
		<div class="item home__cover" data-bg=<%= asset_path "img/home/home__bg3.jpg" %> ></div>
		<div class="item home__cover" data-bg=<%= asset_path "img/home/home__bg4.jpg" %> ></div>
	</div>
	<!-- end home bg -->

	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="home__title"><b>NEW ITEMS</b> OF THIS SEASON</h1>
				<button class="home__nav home__nav--prev" type="button">
					<img src=<%= asset_path "icon/icons8-left-arrow-30.png" %> alt="">
				</button>
				<button class="home__nav home__nav--next" type="button">
					<img src=<%= asset_path "icon/icons8-right-arrow-30.png" %> alt="">
				</button>
			</div>

			<div class="col-12">
				<div class="owl-carousel home__carousel">
					<%= @moviesnewitemsession.each do |t| %>
					<div class="item" >
						<!-- card -->
						<div class="card card--big">
							<div class="card__cover">
								<img src=<%= t.movieimage %> alt="">
								<a href="#" class="card__play">
									<img src=<%= asset_path "icon/icons8-play-96.png" %> alt="">
								</a>
							</div>
							<div class="card__content">
								<h3 class="card__title"><a href="#"><%= t.moviename %></a></h3>
								<span class="card__category">
									<a href="#"><%= t.category %></a>
									<a href="#"><%= t.yearofrelease %></a>
								</span>
								<span class="card__rate"><img src=<%= asset_path "icon/icons8-star-filled-24.png" %> alt=""><%= t.rating %></span>
							</div>
						</div>
						<!-- end card -->
						
					</div>
					<% end %>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- end home -->

